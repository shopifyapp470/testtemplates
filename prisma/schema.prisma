// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Session {
  id            String   @id @map("_id")
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}


model Rewardpoint {
  // MongoDB ke liye auto-generated ID ka use karein
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  customerid   String
  pointvalue   Int
  pendingpoint Int       @default(0)
  activepoint  Int       @default(0)
  store        String
  customeremail String
  dob          DateTime?
  anniversaryDate DateTime?
  lastBirthdayRewardYear Int?
  lastAnniversaryRewardYear Int?
  birthdayPoint             Int      @default(0) 
  anniversaryPoint          Int      @default(0)
  referredBy      String?  // Referrer (User A) ki Customer ID   
  firstOrderDone  Boolean  @default(false)
  orders       OrderHistory[]
}

model OrderHistory {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  orderId         String    @unique
  orderNumber     String?
  status          String    @default("PENDING")
  discountAmount  Float
  couponCode      String?
  pointsEarned    Int
  pointsRedeemed  Int
  pointsRevert    Int       @default(0)
  highRewardPoint Int       @default(0)
  subtotal        Float     @default(0.0)
  productNames    String?
  createdAt       DateTime  @default(now())
  
  // Relation IDs MongoDB mein String hoti hain
  rewardPointId   String    @db.ObjectId
  rewardPoint     Rewardpoint @relation(fields: [rewardPointId], references: [id])
}
// ✅ Table name: userbirthday
model userbirthday {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  shop             String   @unique
  birthdayPoint    Int      @default(0)
  anniversaryPoint Int      @default(0)
  earnPercentage   Int      @default(10)
  allearnPercentage Int      @default(10)
  redeemPercentage Int      @default(10)
  minOrderTotal    Float    @default(10000.0)
  fixedRewardPoint Int      @default(100)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
// ✅ CleverTap Configuration Table
model CleverTapConfig {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  shop         String   @unique // Store URL (e.g., myshop.myshopify.com)
  accountId    String   // X-CleverTap-Account-Id
  passcode     String   // X-CleverTap-Passcode
  walletId     String   // CT_WALLET_ID (e.g., 1198)
  region       String   @default("in1") 
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ReferralTracking {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  referrerId    String   // Sender's ID
  senderEmail   String?  // <--- Nayi field: Sender ka email store karne ke liye
  userIp        String   // Matching ke liye
  receiverEmail String?  // Receiver ka email (Webhook se update hoga)
  shop          String
  createdAt     DateTime @default(now())
}