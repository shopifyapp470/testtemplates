// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}


model Rewardpoint {
  id            String         @id @default(cuid())
  customerid    String
  pointvalue    Int
  pendingpoint  Int      @default(0)
  activepoint   Int      @default(0)
  store         String
  customeremail String
  dob           DateTime?
  anniversaryDate DateTime?
  lastBirthdayRewardYear Int?
  lastAnniversaryRewardYear Int?
  birthdayPoint             Int      @default(0) 
  anniversaryPoint          Int      @default(0)
  orders        OrderHistory[]
}

model OrderHistory {
  id          String  @id @default(cuid())
  orderId     String  @unique // शॉपिफाई की ऑर्डर आईडी (जैसे: "gid://shopify/Order/12345")
  
  orderNumber String? // पढ़ने में आसान ऑर्डर नंबर (जैसे: "#1001")
  status       String   @default("PENDING") // Values: "PENDING" or "PROCESSED"
  discountAmount Float // कितना डिस्काउंट मिला
  couponCode     String? // कौन सा कूपन कोड यूज़ हुआ (अगर कोई हो)
  pointsEarned   Int // इस ऑर्डर से कितने पॉइंट्स मिले
  pointsRedeemed Int // इस ऑर्डर में कितने पॉइंट्स यूज़ किए गए
  pointsRevert   Int      @default(0)
  highRewardPoint Int        @default(0)
  subtotal       Float    @default(0.0)
  productNames   String?
  createdAt     DateTime    @default(now())
  rewardPointId String
  rewardPoint   Rewardpoint @relation(fields: [rewardPointId], references: [id])
}
// ✅ Table name: userbirthday
model userbirthday {
  id            String   @id @default(uuid())
  shop          String   @unique  // <--- YE HONA BAHUT ZAROORI HAI
  birthdayPoint Int      @default(0)
  anniversaryPoint Int      @default(0)
  earnPercentage Int       @default(10)
  minOrderTotal    Float    @default(10000.0) // Kitne amount par reward milega
  fixedRewardPoint Int      @default(100)     // Kitne points milenge
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}